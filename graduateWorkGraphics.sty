	\DeclareCaptionLabelFormat{gostfigure}{Рисунок~#2}
	\DeclareCaptionLabelFormat{gosttable}{Таблица~#2}
	\DeclareCaptionLabelSeparator{gostfigurelabelseparator}{.~}
	\DeclareCaptionLabelSeparator{gosttablelabelseparator}{~-~}
	\captionsetup{		
		textformat=period,
		figurewithin=none,
		tablewithin=none
		}
	\captionsetup[figure]{
		labelsep=gostfigurelabelseparator,
		justification=centering,
		labelformat=gostfigure,
		figurewithin=none
		}
	\captionsetup[longtable]{
		labelsep=gosttablelabelseparator,
		justification=raggedleft,
		labelformat=gosttable
	}
