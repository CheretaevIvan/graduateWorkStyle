%%% настройка отображения частей
%%%
	\usepackage{titlesec}
	
	\titleformat{\chapter}[hang]
	{\filcenter}
	{}{1pt}{\thechapter. \MakeUppercase}
	
	\titleformat{\section}[hang]
	{\normalsize}
	{}{1pt}{\thesection. }
	
	\titleformat{\subsection}
	{\normalsize}
	{}{1pt}{\thesubsection. }
	
	% Настройка вертикальных и горизонтальных отступов
	\titlespacing*{\chapter}{0pt}{0pt}{18pt}
	\titlespacing*{\section}{1.27cm}{6pt}{12pt}
	\titlespacing*{\subsection}{1.9cm}{6pt}{6pt}
	
